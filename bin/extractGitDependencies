#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Extract dependencies listed in the passed MARKDOWN-FILE(s).
HELPTEXT
    echo
    printf 'Usage: %q %s\n' "$(basename "$1")" 'MARKDOWN-FILE [...] [-?|-h|--help]'
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac
if [ $# -eq 0 ]; then
    printUsage "$0" >&2
    exit 2
fi

exec sed -n -e '/^#\+ Dependencies$/,/^#\+ /{ s#^\* \[[^]]\+\](\([^)]\+\))\([[:space:]].*\)\?$#\1#p; }' \
    -- "$@"
